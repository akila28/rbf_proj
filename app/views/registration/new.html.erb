<h2>Sign up</h2>

<%= form_tag(user_registration_path,:method => 'post') %>
<%= devise_error_messages! %>
<table>

<tr>
<td>Username : </td>
<td><%=text_field_tag "user[username]",@user.username %></td>
</tr>

<tr>
<td>Email : </td>
<td><%=email_field_tag "user[email]",@user.email %></td>
</tr>

<tr>
<td>Password : </td>
<td><%=password_field_tag "user[password]",@user.password %></td>
</tr>

<tr>
<td>Retype password : </td>
<td><%=password_field_tag "user[password_confirmation]",@user.password_confirmation %></td>
</tr>

<tr>
<td>Address : </td>
<td><%=text_area "user[Address]",@user.Address,:rows =>2 ,:cols => 2 %></td>
</tr>

<tr>
<td>Mobile_number : </td>
<td><%=text_field_tag "user[Mobile_number]",@user.Mobile_number %></td>
</tr>

<tr>
<td><%= submit_tag 'submit', :class => "form_submit"%></td>
</tr>
</table>
<br />
<%= render :partial => "devise/shared/links" %>
