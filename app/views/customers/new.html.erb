<br />
<h1>New customer</h1>


 <%= form_for @customer, :html => {:multipart => true} do |f| %>
  <% if @customer.errors.any? %>  
  <ul>
  <% @customer.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
  </ul>
 <% end %>



<h4><span class="customer">Customer details</span></h4>     
<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_status_input">
<div class="controls"><br></ br>
</div></div>
</div>
</div>

<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_first_name_input"><%= f.label :first_name %><div class="controls"><%= f.text_field :first_name %>

</div></div>
</div>

<div class='span6'>
<div class="string input optional stringish control-group" id="customer_last_name_input"><%= f.label :last_name %><div class="controls"><%= f.text_field :last_name %>
</div></div>
</div>
</div>

<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_date_of_birth_input">
<%= f.label :date_of_birth %><div class="controls"><%= f.text_field :date_of_birth %>

</div></div>
</div>

<div class='span6'>
<div class="string input optional stringish control-group" id="customer_sex_input">
<%= f.label :sex %><div class="controls"><%= f.radio_button :sex, "male" %>
     <%= f.label :sex, "male", :value => "male" %>
     <%= f.radio_button :sex, "female" %>
     <%= f.label :sex, "female", :value => "female" %>
   
</div></div>
</div>
</div>
 
<hr>
<h4><span class="customer">Contact details</span></h4>
  
<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_city_input">
<%= f.label :city %><div class="controls"><%= f.text_field :city %>
</div></div>
</div>

<div class='span6'>
<div class="string input optional stringish control-group" id="customer_state_input">
<%= f.label :state %><div class="controls"><%= f.text_field :state %>
</div></div>
</div>
</div>

<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_pincode_input">
<%= f.label :pincode %><div class="controls"><%= f.text_field :pincode %>
</div></div>
</div>

<div class='span6'>
<div class="string input optional stringish control-group" id="customer_address_input">
<%= f.label :address %><div class="controls"><%= f.text_field :address, :id => "address", :cols => 5, :rows => 3 %>
</div></div>
</div>
</div>
</hr>
<hr>
<h4><span class="customer">ID details</span></h4>
<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_PAN_input">
<%= f.label :PAN %><div class="controls"><%= f.text_field :PAN %>
</div></div>
</div>

<br></br>
<br></br>
</hr>

<hr>
<h4><span class="customer">Photo</span></h4>
<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group" id="customer_photo_input">
<%= f.label :Photo %><div class="controls"><%= f.file_field :photo %>
</div></div>
</div>
<br />
</hr> 
<br /><br />
<hr>
<%= f.fields_for :folios do |f|%>


<h4><span class="folio">share</span></h4>
<div class='row'>
<div class='span6'>
<div class="string input optional stringish control-group">
<%= f.label :no_of_shares %><div class="controls"><%= f.text_field :no_of_shares, :class => 'textbox', :value => '' %>
</div></div>
</div>


<div class='span6'>


</hr> 
<% end %>

          
<fieldset class="form-actions"> <%= f.submit "Create Customer", class: "btn btn-primary" %></field>
<% end %>
</div>
</div>
