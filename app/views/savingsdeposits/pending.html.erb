      <td><%= savingsdeposit.customer_id %></td>
      <td><%= savingsdeposit.current_balance %></td>
      <td><%= savingsdeposit.opened_on %></td>
      <td><span class="label label-success"><%= savingsdeposit.status %></span></td>
      <td><%= link_to "#{savingsdeposit.account_type}", approve_savingsdeposit_path(savingsdeposit) %>
      </td>
      <td><%= link_to(savingsdeposit_path(savingsdeposit), :class => 'btn btn-small btn-info') do %>
More info <i class="icon-info-sign icon-white"></i>
          <% end %></td>

</tr>
    <% end %> 
<% end %> 
 </table>

  
