<h1><span class="savingsdeposit">Savingsdeposit details</span></h1><br /><br />
<div class="row">
 <div class="span6 offset6 action_bar">
  <div>
  <%= link_to "Edit transaction", edit_savingsdeposit_path(:id => @savingsdeposit.id),class: "btn-primary btn" %>
  <%= link_to "Add transaction", new_savingsdeposittransaction_path(:id => @savingsdeposit.id),class: "btn-primary btn" %><br /><br />

  <%= form_for @savingsdeposit, url: activate_savingsdeposit_path(@savingsdeposit), :html => { :method => :put } do |f| %>
  <%= f.submit "approve savingsdeposit", class: "btn btn-danger"  %>
   <% end %>
  </div>
 </div></div>
 
<h5><%= "#{@savingsdeposit.customer.first_name} #{@savingsdeposit.customer.last_name}               #{@savingsdeposit.customer.code}" %></h5>

<table cellpadding = "5px" cellspacing = "5px" width = "100%" class="table table-striped">
<tr>
     <th>opened on</th>
      <th>status</th>
      <th>Account type</th>
      <th>current balance</th>
</tr>
 
<tr>
    <td><%= @savingsdeposit.opened_on %></td>
    <td><%= @savingsdeposit.status %></td> 
    <td><%= @savingsdeposit.account_type %></td> 
    <td><%= @savingsdeposit.current_balance %></td>
</tr>
</table>

<h1>Transaction History</h1><br />
<table cellpadding = "5px" cellspacing = "5px" width = "100%" class="table table-striped">
<tr>
      <th>transaction date</th>
      <th>transaction type</th>
      <th>transaction mode</th>
      <th>transaction amount</th>
      <th>particulars</th>
      <th>status</th>
</tr>
<% @savingsdeposit.savingsdeposittransactions.each do |f|%>
<tr>
    <td><%= f.transaction_date %></td>
    <td><%= f.transaction_type %></td>
    <td><%= f.transaction_mode %></td>
    <td><%= f.transaction_amount %></td>
    <td><%= f.particulars %></td> 
    <td><%= f.status %></td> 
</tr>
<% end %>
</table>



<div align = "right">
<a class="btn btn-inverse" href="/dailyproducts">Daily Product</a>
</div>

